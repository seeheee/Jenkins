<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.MemberMapper">

<resultMap id="memberMap" type="org.zerock.domain.MemberVO">
    <id property="userid" column="userid"/>
    <result property="userid" column="userid"/>
    <result property="userpw" column="userpw"/>
    <result property="username" column="username"/>
    <result property="regdate" column="regdate"/>
<!--    <result property="updatedate" column="updatedate"/>-->
    <collection property="authList" resultMap="authMap"/>
</resultMap>

<resultMap id="authMap" type="org.zerock.domain.AuthVO">
    <result property="userid" column="userid"/>
    <result property="auth" column="auth"/>
</resultMap>

<select id="read" resultMap="memberMap">
    SELECT mem.userid, userpw, username, enabled, regdate, auth
    FROM tbl_member mem LEFT OUTER JOIN tbl_member_auth auth
    on mem.userid = auth.userid WHERE mem.userid = #{userid}
</select>
</mapper>